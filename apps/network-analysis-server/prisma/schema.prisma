datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Person {
  activities Json?
  createdAt  DateTime @default(now())
  id         String   @id @default(cuid())
  name       String?
  profileUrl String?
  snapshot   Json?
  updatedAt  DateTime @updatedAt
}

model Activity {
  content   String?
  createdAt DateTime  @default(now())
  date      DateTime?
  id        String    @id @default(cuid())
  typeField String?
  updatedAt DateTime  @updatedAt
}
